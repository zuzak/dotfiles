source ~/.vim/bundle/pathogen/autoload/pathogen.vim
execute pathogen#infect()

set nocompatible            " disable legacy

syntax enable
colorscheme desert
set number

set encoding=utf-8
set showcmd                 " display incomplete commands

filetype plugin indent on " load file specific plugins/indentation

" indentation
set nowrap
set tabstop=4               " set tab key to insert 4 spaces
set shiftwidth=2            " set << and >> to move 4 spaces
set expandtab               " convert tabs to spaces
set autoindent              " use indentation of previous line
set smartindent             " indent magically
set textwidth=80            " oblige with tradition

" search
set hlsearch                " highlight search matches
set incsearch               " incremental (instant) searching
set ignorecase              " ignore case in searches
set smartcase               " ...unless mixed-case
set magic                   " greppy regexp

set showmatch               " highlight matching brackets

set laststatus=2            " always show status line


" force hjkl usage
noremap <Up> ""
noremap! <Up> <Esc>
noremap <Down> ""
noremap! <Down> <Esc>
noremap <Left> ""
noremap! <Left> <Esc>
noremap <Right> ""
noremap! <Right> <Esc>
